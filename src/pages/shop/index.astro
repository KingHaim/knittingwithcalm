---
import Layout from '../../layouts/Layout.astro';
import PatternFilters from '../../components/PatternFilters.vue';
import PatternGrid from '../../components/PatternGrid.vue';

// This would come from your database
const filters = {
  categories: ['Sweaters', 'Cardigans', 'Accessories', 'Children', 'Home'],
  yarnWeight: ['Lace', 'Fingering', 'Sport', 'DK', 'Worsted', 'Bulky'],
  skillLevel: ['Beginner', 'Intermediate', 'Advanced'],
  age: ['Baby', 'Child', 'Adult'],
};
---

<Layout 
  title="Shop Knitting Patterns | Modern Designs for Every Skill Level"
  description="Browse our collection of knitting patterns. Filter by category, yarn weight, and skill level to find your perfect project."
>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl mb-8">Shop Patterns</h1>
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <PatternFilters filters={filters} client:load />
      <div class="lg:col-span-3">
        <PatternGrid client:load />
      </div>
    </div>
  </div>
</Layout>